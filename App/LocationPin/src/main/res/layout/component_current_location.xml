<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:columnCount="2"
			android:rowCount="3"
			android:padding="@dimen/common_padding">

	<TextView
			android:id="@+id/curloc_latitude_label"
			android:layout_row="0"
			android:layout_column="0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="GPS Latitude"
			android:paddingRight="@dimen/common_padding"
			android:textSize="@dimen/common_text_size"
			android:textColor="@android:color/holo_blue_light"/>

	<TextView
			android:id="@+id/curloc_latitude_value"
			android:layout_row="0"
			android:layout_column="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:gravity="right"
			android:paddingRight="@dimen/common_padding"
			android:textSize="@dimen/common_text_size"/>

	<TextView
			android:id="@+id/curloc_longitude_label"
			android:layout_row="1"
			android:layout_column="0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="GPS Longitude"
			android:paddingRight="@dimen/common_padding"
			android:textSize="@dimen/common_text_size"
			android:textColor="@android:color/holo_blue_light"/>

	<TextView
			android:id="@+id/curloc_longitude_value"
			android:layout_row="1"
			android:layout_column="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:gravity="right"
			android:paddingRight="@dimen/common_padding"
			android:textSize="@dimen/common_text_size"/>


	<TextView
			android:id="@+id/curloc_distance_label"
			android:layout_row="2"
			android:layout_column="0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Distance to PIN (km)"
			android:paddingRight="@dimen/common_padding"
			android:textSize="@dimen/common_text_size"
			android:textColor="@android:color/holo_blue_light"/>

	<TextView
			android:id="@+id/curloc_distance_value"
			android:layout_row="2"
			android:layout_column="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:gravity="right"
			android:paddingRight="@dimen/common_padding"
			android:textSize="@dimen/common_text_size"/>

</GridLayout>